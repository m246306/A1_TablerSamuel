<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@null"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/text1"
        android:textAlignment="textEnd"
        android:gravity="bottom"
        android:textSize="100dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.28"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/AC"
        android:text="AC"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@null"
        android:colo
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/plusAndMinus"
        app:layout_constraintBottom_toTopOf="@id/seven"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/plusAndMinus"
        android:text="+/-"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/AC"
        app:layout_constraintRight_toLeftOf="@id/percent"
        app:layout_constraintBottom_toTopOf="@id/eight"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/percent"
        android:text="%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/plusAndMinus"
        app:layout_constraintRight_toLeftOf="@id/divide"
        app:layout_constraintBottom_toTopOf="@id/nine"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"

        />

    <Button
        android:id="@+id/divide"
        android:text="\"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintLeft_toRightOf="@id/percent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/multiply"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/seven"
        android:text="7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/eight"
        app:layout_constraintBottom_toTopOf="@id/four"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/eight"
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/plusAndMinus"
        app:layout_constraintLeft_toRightOf="@id/seven"
        app:layout_constraintRight_toLeftOf="@id/nine"
        app:layout_constraintBottom_toTopOf="@id/five"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"

        />

    <Button
        android:id="@+id/nine"
        android:text="9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/percent"
        app:layout_constraintLeft_toRightOf="@id/eight"
        app:layout_constraintRight_toLeftOf="@id/multiply"
        app:layout_constraintBottom_toTopOf="@id/six"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/multiply"
        android:text="x"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divide"
        app:layout_constraintLeft_toRightOf="@id/nine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/minus"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/four"
        android:text="4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/five"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/five"
        android:text="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/eight"
        app:layout_constraintLeft_toRightOf="@id/four"
        app:layout_constraintRight_toLeftOf="@id/six"
        app:layout_constraintBottom_toBottomOf="@id/two"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"


        />

    <Button
        android:id="@+id/six"
        android:text="6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/nine"
        app:layout_constraintLeft_toRightOf="@id/five"
        app:layout_constraintRight_toLeftOf="@id/minus"
        app:layout_constraintBottom_toBottomOf="@id/three"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"



        />

    <Button
        android:id="@+id/minus"
        android:text="-"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/multiply"
        app:layout_constraintLeft_toRightOf="@id/six"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/add"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"


        />

    <Button
        android:id="@+id/one"
        android:text="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/two"
        app:layout_constraintBottom_toBottomOf="@id/zero"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"

        />

    <Button
        android:id="@+id/two"
        android:text="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintRight_toLeftOf="@id/three"
        app:layout_constraintBottom_toTopOf="@id/zero"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"

        />

    <Button
        android:id="@+id/three"
        android:text="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/six"
        app:layout_constraintLeft_toRightOf="@id/two"
        app:layout_constraintRight_toLeftOf="@id/add"
        app:layout_constraintBottom_toTopOf="@id/decimal"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"


        />

    <Button
        android:id="@+id/add"
        android:text="+"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/minus"
        app:layout_constraintLeft_toRightOf="@id/three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equal"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"


        />

    <Button
        android:id="@+id/zero"
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/decimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.50"
        app:layout_constraintVertical_weight="0.18"
        />

    <Button
        android:id="@+id/decimal"
        android:text="."
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintLeft_toRightOf="@id/zero"
        app:layout_constraintRight_toLeftOf="@id/equal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"



        />

    <Button
        android:id="@+id/equal"
        android:text="="
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add"
        app:layout_constraintLeft_toRightOf="@id/decimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintVertical_weight="0.18"


        />

</androidx.constraintlayout.widget.ConstraintLayout>
